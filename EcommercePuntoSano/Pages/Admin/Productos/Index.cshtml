@page
@model EcommercePuntoSano.Pages.Admin.Productos.IndexModel

@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center align-items-baseline mb-3">
        <h2>Lista de Productos</h2>

        <p>
            <a asp-page="Create">Create New</a>
        </p>
    </div>

    @if (Model.Productos != null && Model.Productos.Any())
    {
        <table id="productosTable" class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Imagen</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Categoría</th>
                    <th>Fecha de Creación</th>
                    <th>Acciones</th>
                </tr>

            </thead>
        
            <tbody>
                @foreach (var producto in Model.Productos)
                {
                    <tr>

                        <td>@producto.Id</td>
                        <td>@producto.Nombre</td>
                        <td>@producto.Descripcion</td>
                        <td></td>
                        <td>@producto.Precio</td>
                        <td>@producto.CantidadDisponible</td>
                        <td>@producto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-asp-page="Editar" asp-route-id="@producto.Id" class="btn btn-sm btn-warning">

                                <i class="fa-solid fa-pen-to-square"></i> Editar
                            </a>
                            <a asp-page="Detalle" asp-route-id="@producto.Id" class="btn btn-sm btn-info">
                                <i class="fa-solid fa-circle-info"></i> Detalle
                            </a>

                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-danger btn-delete" data-id="@producto.Id" data-name="@producto.Nombre">
                                <i class="fa-solid fa-trash-can"></i> Eliminar
                            </button>
                        </td>





                    </tr>


                }
            </tbody>
        </table>
    }
    else 
    {
        <div class="alert alert-info" role="alert">
            No hay productos registradas aún
        </div>
    }
   


</div>


